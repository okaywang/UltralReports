@model ModalModel
<div class="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <label class="modal-title">@Model.Title</label>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    @{
                        foreach (var prop in @Model.Properties)
                        {
                            var control = prop.GetControl();
                        <div class="form-group" @(control.IsVisible ? string.Empty : "style=display:none") >
                            <label class="control-label col-md-2">@prop.GetDisplayName()</label>
                            <div class="col-md-5">
                                @Html.Raw(control.Render())
                            </div>
                        </div>                            
                        }
                    }
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button class="btn btn-primary command-save" type="button">保存</button>
            </div>
        </div>
    </div>
</div>
